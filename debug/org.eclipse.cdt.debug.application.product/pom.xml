										<linux>tar.gz</linux>
										<macosx>tar.gz</macosx>
									</formats>
								</configuration>
							</execution>
						</executions>
						<configuration>
							<products>
								<product>
									<archiveFileName>${archiveFileName}</archiveFileName>
									<id>${productId}</id>
									<rootFolder>${rootFolder}</rootFolder>
								</product>
							</products>
							<source>repository</source>
						</configuration>
					</plugin>
					<!-- Disable Mac signing for now

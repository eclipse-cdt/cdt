  <artifactId>org.eclipse.cdt.rcptt.tests</artifactId>
  <name>CDT Product Tests</name>
  <packaging>rcpttTest</packaging>

  <parent>
    <groupId>org.eclipse.cdt</groupId>
    <artifactId>cdt-parent</artifactId>
    <version>9.0.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>

  <properties>
    <aut.extension>tar.gz</aut.extension>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.eclipse.cdt</groupId>
      <artifactId>org.eclipse.cdt.dsf.gdb.product</artifactId>
      <version>9.0.0-SNAPSHOT</version>
      <type>eclipse-repository</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.eclipse.rcptt</groupId>
        <artifactId>rcptt-maven-plugin</artifactId>
        <version>${rcptt-version}</version>
        <extensions>true</extensions>
        <configuration>
          <aut>
            <groupId>org.eclipse.cdt</groupId>
            <artifactId>org.eclipse.cdt.dsf.gdb.product</artifactId>
            <extension>${aut.extension}</extension>
            <vmArgs>
              <vmArg>${argLine}</vmArg>
            </vmArgs>
		    <args>
		      <arg>-nosplash</arg>
		      <arg>--launcher.GTK_version</arg>
		      <arg>2</arg>
			  <!-- 
				<arg>-debug ${basedir}/.options</arg>
			  -->
		    </args> 
          </aut>
          <runner>
            <version>${rcptt-version}</version>
          </runner>
          <suites>
            <suite>SmokeTest</suite>
          </suites>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
